pipeline {
  agent any
  stages {
    stage('SCM') {
      steps {
        git branch: 'main',
        url: 'https://github.com/nirtal85/selenium-python.git'
      }
    }
    stage('Run tests') {
      steps {
        bat """
   py -m venv env
   .\\env\\Scripts\\activate
   pipenv install
   pipenv run pytest --alluredir=allure_results tests
        """
      }
    }
  }
  post {
    always {
      allure includeProperties: false,
      jdk: '',
      results: [[path: 'allure_results']]
    }
  }
}